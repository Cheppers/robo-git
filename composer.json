{
    "name": "cheppers/robo-git",
    "description": "Robo task to read the content of the staged files",
    "license": "GPL-2.0",
    "config": {
        "bin-dir": "bin",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.1",
        "cheppers/asset-jar": "^0.0.1",
        "consolidation/robo": "^1.0"
    },
    "require-dev": {
        "cheppers/git-hooks": "^0.0.8",
        "codeception/codeception": "^2.2",
        "squizlabs/php_codesniffer": "^2.7"
    },
    "autoload": {
        "psr-4": {
            "Cheppers\\Robo\\Git\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cheppers\\Robo\\Git\\Tests\\Acceptance\\": "tests/acceptance",
            "Cheppers\\Robo\\Git\\Tests\\Unit\\": "tests/unit"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@deploy-git-hooks"
        ],
        "post-update-cmd": [
            "@deploy-git-hooks"
        ],
        "deploy-git-hooks": "\\Cheppers\\GitHooks\\Main::deploy"
    }
}
